{
    "name": "Odoo Barcode",
    "description": "Simulate barcode scanning!",
    "version": "0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
          }
    },
    "icons": {
        "128": "icon.png"
    },
    "options_page": "options.html"
}
